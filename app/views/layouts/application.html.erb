<!DOCTYPE html>
<html>
<head>
	<title>TableQ</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true  %>
	<%= csrf_meta_tags %>

	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

	<!-- Optional theme -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">

	<!-- Latest compiled and minified JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>


</head>
<body>
	<nav class="navbar-default">
		<div class="container-fluid">
			<div class="collapse navbar-collapse">
				<ul class="nav navbar-nav">
					<%= link_to image_tag('Table.png'), root_path, class: "table-img" %>

				</ul>
				<ul class="nav navbar-nav navbar-right">
					<% if !user_signed_in? && !owner_signed_in?  %>
					<li><a href="#" class="signup">Sign Up</a></li>
					<li><a href="#" class="signin">Sign In</a></li>
					<% else %> 
					<li class="btn-group navbar-btn">
						<button class="btn btn-navbar">My Account</button>
						<button data-toggle="dropdown" class="btn btn-navbar dropdown-toggle"><span class="caret"></span>
						</button>
						<ul class="dropdown-menu">
							<li><a href="#">Profile</a></li>
							<li><a href="#">Reviews</a></li>
							<li><a href="#">Favorites</a></li>
							<li><a href="#" class="settings">Settings</a></li>
						</ul>
					</li>
					<li><%= link_to 'Home', signed_in_index_path %></li>     
					<li><%= link_to 'Find', restaurants_index_path %></li> 
					<li><%= link_to 'Reservations', reservations_index_path %>
					</li> 
					<li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
					</li>
					<% end %>
				</ul>
			</div>
		</div>
	</nav>

	<div id="signup-popup">

		<p>What type of account would you like to sign up as?</p>

		<%= link_to image_tag('Owner3.png'), new_user_registration_path %>
		<%= link_to image_tag('Owner2.png'), new_owner_registration_path %>
		<%= link_to image_tag('signinbanner.png'), class: "sign-in-banner" %>

	</div>

	<div id="signin-popup">

		<p>What type of account would you like to sign in as?</p>

		<%= link_to image_tag('Owner3.png'), new_user_session_path %>
		<%= link_to image_tag('Owner2.png'), new_owner_session_path %>
		<%= link_to image_tag('signinbanner.png'), class: "sign-in-banner" %>

	</div>


	<%= image_tag("close.png", class: "sign-in-close") %>

	<div class= "wrapper">

		<%= yield %>

	</div>

	<div id="flash">
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>
	</div>


	<footer>
		<div class="footer-top-container">
			<div class="col-md-4">
				<h3>About TableQ</h3>
				<a href=""><p>Careers</p></a>
				<a href=""><p>Press Room</p></a>
				<a href=""><p>Investor Relations</p></a>
			</div>

			<div class="vertical-line"></div>

			<div class="col-md-4">
				<h3>Community</h3>
				<a href=""><p>Local Events</p></a>
				<a href=""><p>Community Giving</p></a>
				<a href=""><p>Fundraisers</p></a>
			</div>

			<div class="vertical-line2"></div>

			<div class="col-md-4">
				<h3>Contact Us</h3>
				<a href=""><p>Offices</p></a>
				<a href=""><p>Telephone</p></a>
				<a href=""><p>Email</p></a>
			</div>
		</div>
	</footer>

	<div class="closing-footer">

		<p>Â© Kuoch Productions. All rights reserved.</p>

		<p>Terms of Use | Privacy Policy.</p>

	</div>

<div class=darker>

</div>

</body>
</html>


